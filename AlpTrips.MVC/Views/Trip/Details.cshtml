@model AlpTrips.Application.Dtos.TripDto;
@using AlpTrips.Application.Dtos;
@{
    ViewData["Title"] = "Szczegóły";
}

@{
    ViewBag.Title = Model.Name;
    var comments = (IEnumerable<AlpTrips.Domain.Entities.Comment>)ViewBag.Comments;
    var ratingSum = ViewBag.RatingSum;
    var ratingCount = ViewBag.RatingCount;

    decimal rating = 0;
    if (ratingCount > 0)
    {
        rating = (ratingSum / ratingCount);
    }
    var totalRating = decimal.Parse(rating.ToString());
}

<div class="container">
    <h4 class="display-4">@Model.Name</h4>


    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="\images\00ad4ebb-a0c5-47da-96e8-92677de2d5f4_licensed-image.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="\images\2ac9e792-6a28-463d-8c19-700549a86200_Mont_maudit.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="\images\9da083d5-2041-4f43-a5e6-5e523f1e0be0_Matterhorn_(3299188209).jpg" class="d-block w-100" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

        <div class="col-md-6">

            <div class="row">
                <div class="col-md-12">
                    <h1> Szczegóły trasy: @Model.Name</h1>
                    <div>
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (totalRating >= i)
                            {
                                <span class="starGlow" id="sRate@i"></span>
                            }
                            else
                            {
                                <span class="starFadeN" id="sRate@i"></span>
                            }
                        }
                    </div>

                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-primary">
                    <span class="label label-primary">Autor: </span>
                    <span class="monospaced">@Model.UserName</span>
                </div>
                <div class="col-md-12">
                    <span>Pasmo górskie: @Model.MountainRange</span>

                </div>

                <div class="row">
                    <div class="col-md-12">
                        <p class="description">@Model.Description</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <a href="@Model.Link" target="_blank" class="btn btn-outline-primary">Link do relacji</a>

                    </div>
                </div>

                <hr />
                <ul class="list-group">
                    <li class="list-group-item"><span class="font-weight-bold">Poziom trudności: </span>@Model.Level</li>
                    <li class="list-group-item"><span class="font-weight-bold">Długość trasy: </span>@Model.Time</li>
                    <li class="list-group-item"><span class="font-weight-bold">Przewyższenie: </span>@Model.Elevation</li>


                </ul>
                <a asp-action="Edit" asp-controller="Trip" asp-route-encodedName="@Model.EncodedName" class="tekst">Edytuj</a>
                <a asp-action="Delete" asp-controller="Trip" asp-route-encodedName="@Model.EncodedName" class="tekst">Usuń</a>
            </div>
        </div>
    </div>

    <hr />





    @foreach (var c in comments)
    {

        <div class="row">
            <div class="col-md-3">
                <i>@c.CreatedDate</i>
                <br />
                @for (var i = 1; i <= c.Rate; i++)
                {
                    <span class="starGlowN"></span>
                }
                @for (var i = (c.Rate + 1); i <= 5; i++)
                {
                    <span class="starFadeN"></span>
                }
            </div>
            <div class="col-md-9">
                @Html.Raw(c.Text.Replace("\n", "<br />"))


            </div>
        </div>
        <hr />
    }

    @Html.Partial("_CommentBox")

    <script>
        function SCRate() {
            for (var i = 1; i <= @totalRating; i++) {
                $("#sRate" + i).removeClass('starFadeN').addClass('starGlowN');
            }
        }

        $(function () {
            SCRate();
        });

    </script>




    <div class="py-5 bg-light">
        <h3 class="h3"> Podobne trasy:</h3>
        <div class="row">
            @await Component.InvokeAsync("TopTrasy")

        </div>
    </div>

    <div>
        <a asp-action="Index">Powrót do listy</a>
    </div>
