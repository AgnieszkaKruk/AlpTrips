@model AlpTrips.Application.Dtos.TripDto;

<div class="card mb-4 shadow-sm">
    <img src="@Model.ImageUrl" class="img-thumbnail" />
    <div class="card-body">
        <h3 class="card-title">@Model.Name</h3>
        <p class="card-text">@Model.Description</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btnbtn-group">
                <a class="btn btn-sm btn-outline-secondary" asp-controller="Trip" asp-action="Details" asp-route-encodedName="@Model.EncodedName">Szczegóły</a>
            </div>
            <small class="text-muted">@Model.UserName</small>
        </div>
    </div>
</div>